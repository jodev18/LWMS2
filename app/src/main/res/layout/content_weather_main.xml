<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dev.jojo.lwms2.WeatherMainActivity"
    tools:showIn="@layout/activity_weather_main">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvAtmVal2"
        android:layout_alignBottom="@+id/tvAtmVal2"
        android:layout_toEndOf="@+id/tvAtmVal"
        android:paddingLeft="8dp"
        android:text="atm"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tvAtmVal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvAtmVal"
        android:layout_below="@+id/textView5"
        android:layout_toStartOf="@+id/textView6"
        android:text="0.8756"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvAtmVal"
        android:layout_alignBottom="@+id/tvAtmVal"
        android:layout_toEndOf="@+id/tvAtmVal"
        android:paddingLeft="8dp"
        android:text="hPa"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tvListTempView"
        fontPath="fonts/helvetica.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgRainStat"
        android:layout_toStartOf="@+id/tvUnit"
        android:text="39"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUnit"
        fontPath="fonts/helvetica.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvListTempView"
        android:layout_alignBottom="@+id/tvListTempView"
        android:layout_alignEnd="@+id/btnPastRecords"
        android:gravity="bottom"
        android:text="Â°C"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imgRainStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/cloudyrain" />

    <TextView
        android:id="@+id/tvHumidityView"
        fontPath="fonts/helvetica.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvListTempView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvListTempView"
        android:text="90%"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvHumidityView"
        android:layout_alignBottom="@+id/tvHumidityView"
        android:layout_toEndOf="@+id/tvHumidityView"
        android:paddingLeft="8dp"
        android:text="humidity"
        fontPath="fonts/helvetica.otf"
        android:textColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imgNightDay"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/moon" />

    <TextView
        android:id="@+id/tvNightDayStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/imgNightDay"
        android:layout_below="@+id/imgNightDay"
        android:text="Night"
        android:textAlignment="center"
        android:textStyle="bold"
        fontPath="fonts/helvetica.otf"/>

    <TextView
        android:id="@+id/tvAtmVal"
        fontPath="fonts/helvetica.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvHumidityView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvHumidityView"
        android:text="10000"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPastRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"
        android:text="Records..."
        android:textColor="@color/colorPrimary"
        android:padding="18dp"
        fontPath="fonts/helvetica.otf"/>

</RelativeLayout>
