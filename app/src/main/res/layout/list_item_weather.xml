<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/alert_light_frame"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvListTempView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="39"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvListTempView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvListTempView"
        android:gravity="bottom"
        android:text="Â°C"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvListTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Date"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvListHum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvListTempView"
        android:text="90"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvListHPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvListHum"
        android:text="10000"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvListHum"
        android:layout_alignBottom="@+id/tvListHum"
        android:layout_toEndOf="@+id/tvListHum"
        android:text="%" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvListHPA"
        android:layout_alignBottom="@+id/tvListHPA"
        android:layout_toEndOf="@+id/tvListHPA"
        android:paddingLeft="8dp"
        android:text="hpa" />

    <TextView
        android:id="@+id/tvListATM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvListHPA"
        android:text="0.8745"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvListATM"
        android:layout_alignBottom="@+id/tvListATM"
        android:layout_toEndOf="@+id/tvListATM"
        android:paddingLeft="8dp"
        android:text="atm" />

    <ImageView
        android:id="@+id/imgRainStat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/tvListTimestamp"
        android:layout_below="@+id/tvListTimestamp"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/imgLightStat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imgRainStat"
        app:srcCompat="@drawable/sun_outline" />

</RelativeLayout>
